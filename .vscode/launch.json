    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Jest Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
              "--inspect-brk",
              "${workspaceFolder}/node_modules/.bin/jest",
              "--runInBand"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Example App",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/example/example.js"
        }
    ]
}