{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "target": "es6",
    "module": "es6",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "noEmitOnError": true
  },
  "include": ["src/**/*"]
}
