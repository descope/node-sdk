{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "lib": ["DOM", "es2017"],
    "moduleResolution": "node",
    "baseUrl": "lib",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "paths": {
      "@testutils/*": ["lib/testutils/*"]
    }
  },
  "include": ["lib/**/*"],
  "exclude": ["**/__mocks__/*", "coverage", "node_modules", "**/testutils/*"]
}
