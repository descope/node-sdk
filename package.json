{
  "name": "@descope/node-sdk",
  "version": "1.0.0",
  "description": "A wrapper for the Descope API",
  "typings": "./dist/index",
  "main": "./dist/index.js",
  "exports": {
    "require": "./dist/index.js",
    "import": "./module.mjs"
  },
  "files": [
    "dist/**/*"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git://github.com/descope/node-sdk.git"
  },
  "engines": {
    "node": ">= 14.0.0"
  },
  "scripts": {
    "build": "rm -rf dist types && babel lib --out-dir dist --extensions '.ts' && tsc --declaration --outDir dist --emitDeclarationOnly",
    "format": "prettier --write lib",
    "check-format": "prettier --check lib",
    "size": "npm run build && size-limit",
    "lint": "eslint lib/**/*.ts --fix",
    "leaks": "bash ./scripts/gitleaks/gitleaks.sh",
    "test": "jest --forceExit --config jest.config.ts --coverage --ci --detectOpenHandles .*test.*",
    "example": "npm run build && cd example && npm i && npm start"
  },
  "author": "Descope",
  "bugs": {
    "url": "git://github.com/descope/node-sdk/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.12",
    "@babel/preset-env": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/jest": "^28.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^15.14.9",
    "@types/node-fetch": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.27.0",
    "babel-plugin-add-import-extension": "^1.6.0",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.4.6",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "nock": "^13.2.4",
    "prettier": "2.6.2",
    "ts-jest": "^28.0.3",
    "typescript": "^4.6.4"
  },
  "size-limit": [
    {
      "limit": "100 kb",
      "path": "dist/*",
      "ignore": [
        "node:*"
      ]
    }
  ],
  "dependencies": {
    "jose": "4.8.1",
    "node-fetch": "3.2.6"
  }
}
