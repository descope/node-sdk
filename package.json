{
  "name": "node-sdk",
  "version": "1.0.0",
  "description": "A wrapper for the Descope API",
  "types": "./types/lib/index.d.ts",
  "main": "./dist/index.js",
  "exports": {
    "require": "./dist/index.js",
    "import": "./module.mjs"
  },
  "files": [
    "dist/**/*",
    "types/**/*"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git://github.com/descope/node-sdk.git"
  },
  "engines": {
    "node": ">= 14.0.0"
  },
  "scripts": {
    "build": "rm -rf dist types && babel lib --out-dir dist --extensions '.ts' && tsc --declaration --outDir types --emitDeclarationOnly",
    "format": "prettier --write lib",
    "check-format": "prettier --check lib",
    "size": "npm run build && size-limit",
    "lint": "eslint lib",
    "test": "jest  --passWithNoTests --config jest.config.ts --coverage --ci --detectOpenHandles .*test.*"
  },
  "author": "Descope",
  "bugs": {
    "url": "git://github.com/descope/node-sdk/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.12",
    "@babel/preset-env": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/jest": "^27.5.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^15.14.9",
    "@types/node-fetch": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.15.0",
    "jest": "^28.1.0",
    "prettier": "2.6.2",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "commonjs": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "no-underscore-dangle": 0,
      "strict": 0,
      "prefer-rest-params": 0
    }
  },
  "size-limit": [
    {
      "limit": "100 kb",
      "path": "dist/*",
      "ignore": ["node:*"]
    }
  ],
  "dependencies": {
    "jose": "^4.8.1",
    "node-fetch": "^3.2.4"
  }
}
